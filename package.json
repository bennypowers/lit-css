{
  "name": "root",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Monorepo for lit-css build plugins",
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennypowers/lit-css.git"
  },
  "scripts": {
    "build": "npm run clean && run-p build:*",
    "build:runtime": "node build.js",
    "build:types": "tsc",
    "lint": "eslint .",
    "test": "npm run build:runtime && tape 'test/*/*.test.js' | tap-spec",
    "release": "npm run build && npm run test && npx changeset publish",
    "clean": "rimraf 'packages/*/*.{cjs,js,d.ts,js.map,cjs.map}'"
  },
  "workspaces": [
    "packages/*",
    "test"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@changesets/cli": "^2.26.1",
    "@microsoft/fast-element": "^1.11.1",
    "@pwrs/eslint-config": "^0.0.26",
    "@rollup/plugin-alias": "^3.1.9",
    "@types/node": "^18.15.11",
    "@types/uglifycss": "0.0.7",
    "arraybuffer-to-string": "^1.0.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "esbuild": "^0.16.17",
    "esbuild-plugin-alias": "^0.2.1",
    "esm": "^3.2.25",
    "globby": "^13.1.4",
    "lit": "^2.7.2",
    "memfs": "^3.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.22",
    "postcss-nesting": "^10.2.0",
    "rollup": "^2.79.1",
    "rollup-plugin-alias": "^2.2.0",
    "sass": "^1.62.0",
    "semantic-release": "^19.0.5",
    "tap-spec": "^5.0.0",
    "tap-summary": "^4.0.0",
    "tape": "^5.6.3",
    "typescript": "^4.9.5",
    "webpack": "^5.79.0",
    "wsrun": "^5.2.4"
  }
}

{
  "name": "root",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Monorepo for lit-css build plugins",
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennypowers/lit-css.git"
  },
  "scripts": {
    "build": "yarn clean && run-p build:*",
    "build:runtime": "node build.js",
    "build:types": "tsc",
    "lint": "eslint .",
    "test": "yarn build:runtime && esm-tape-runner 'test/*/*.test.js' | tap-spec",
    "release": "yarn build && yarn test && yarn changeset publish",
    "clean": "rimraf 'packages/*/*.{cjs,js,d.ts,js.map,cjs.map}'"
  },
  "workspaces": [
    "packages/*",
    "test"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@changesets/cli": "^2.21.0",
    "@microsoft/fast-element": "^1.7.2",
    "@pwrs/eslint-config": "^0.0.25",
    "@rollup/plugin-alias": "^3.1.9",
    "@small-tech/esm-tape-runner": "^1.0.3",
    "@types/uglifycss": "0.0.7",
    "arraybuffer-to-string": "^1.0.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "esbuild": "^0.14.24",
    "esbuild-plugin-alias": "^0.2.1",
    "esm": "^3.2.0",
    "globby": "^13.1.1",
    "lit": "^2.2.0",
    "memfs": "^3.4.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.7",
    "postcss-nesting": "^10.1.2",
    "rollup": "^2.69.0",
    "rollup-plugin-alias": "^2.2.0",
    "sass": "^1.49.9",
    "semantic-release": "^19.0.2",
    "tap-spec": "^5.0.0",
    "tap-summary": "^4.0.0",
    "tape": "^5.5.2",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "wsrun": "^5.2.4"
  }
}

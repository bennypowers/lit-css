{
  "name": "root",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Monorepo for lit-css build plugins",
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "MIT",
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennypowers/lit-css.git"
  },
  "scripts": {
    "build": "npm run clean && run-p build:*",
    "build:runtime": "node build.js",
    "build:types": "tsc",
    "lint": "eslint .",
    "test": "npm run build:runtime && tape 'test/*/*.test.js' | tap-spec",
    "release": "npm run build && npm run test && npx changeset publish",
    "clean": "rimraf 'packages/*/*.{cjs,js,d.ts,js.map,cjs.map}'"
  },
  "workspaces": [
    "packages/*",
    "test"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@changesets/cli": "^2.22.0",
    "@microsoft/fast-element": "^1.10.0",
    "@pwrs/eslint-config": "^0.0.26",
    "@rollup/plugin-alias": "^3.1.9",
    "@types/uglifycss": "0.0.7",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "acorn-import-assertions": "^1.7.6",
    "arraybuffer-to-string": "^1.0.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "esbuild": "^0.14.38",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.26.0",
    "eslint-plugin-jsdoc": "^39.5.0",
    "esm": "^3.2.0",
    "globby": "^13.1.1",
    "lit": "^2.2.3",
    "memfs": "^3.4.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "postcss-nesting": "^10.1.4",
    "rollup": "^2.69.0",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-import-assertions": "^0.4.0",
    "sass": "^1.51.0",
    "semantic-release": "^19.0.2",
    "tap-spec": "^5.0.0",
    "tap-summary": "^4.0.0",
    "tape": "^5.5.3",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "wsrun": "^5.2.4"
  }
}

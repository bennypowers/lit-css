{
  "name": "root",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Monorepo for lit-css build plugins",
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "MIT",
  "engines": {
    "node": ">14",
    "npm": ">7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bennypowers/lit-css.git"
  },
  "scripts": {
    "build": "yarn clean && run-p build:*",
    "build:runtime": "node build.js",
    "build:types": "tsc",
    "test": "yarn build:runtime && esm-tape-runner 'test/*/*.test.js' | tap-spec",
    "release": "yarn build && yarn test && yarn changeset publish",
    "clean": "rimraf 'packages/*/*.{cjs,js,d.ts,js.map,cjs.map}'"
  },
  "workspaces": [
    "packages/*",
    "test"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@changesets/cli": "^2.16.0",
    "@microsoft/fast-element": "^1.4.0",
    "@pwrs/eslint-config": "^0.0.21",
    "@rollup/plugin-alias": "^3.1.0",
    "@small-tech/esm-tape-runner": "^1.0.3",
    "@types/uglifycss": "0.0.7",
    "arraybuffer-to-string": "^1.0.2",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "esbuild": "^0.12.15",
    "esbuild-plugin-alias": "^0.1.2",
    "esm": "^3.2.0",
    "globby": "^11.0.4",
    "jest": "^27.0.6",
    "lit": "^2.0.0-rc.2",
    "lit-element": "^2.0.0",
    "memfs": "^3.2.2",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.9",
    "postcss-nesting": "^8.0.1",
    "rollup": "^2.53.0",
    "rollup-plugin-alias": "^2.2.0",
    "sass": "^1.42.1",
    "semantic-release": "^17.0.1",
    "tap-spec": "^5.0.0",
    "tap-summary": "^4.0.0",
    "tape": "^5.2.2",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "wsrun": "^5.2.4"
  }
}

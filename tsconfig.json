{
  "exclude": ["./packages/typescript-transform-lit-css/test"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es2020",
    "module": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    // https://github.com/paulmillr/chokidar/issues/1299
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@pwrs/lit-css": ["packages/lit-css/lit-css"],
      "@pwrs/lit-css/*": ["packages/lit-css/*"],
      "esbuild-plugin-lit-css": ["packages/esbuild-plugin-lit-css/esbuild-plugin-lit-css"],
      "rollup-plugin-lit-css": ["packages/rollup-plugin-lit-css/rollup-plugin-lit-css"],
      "web-dev-server-plugin-lit-css": ["packages/web-dev-server-plugin-lit-css/web-dev-server-plugin-lit-css"],
      "typescript-transform-lit-css": ["packages/typescript-transform-lit-css/typescript-transform-lit-css"]
    }
  }
}
